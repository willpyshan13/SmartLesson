<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/video_margin"
    android:layout_width="@dimen/gallery_item_width"
    android:layout_height="@dimen/gallery_item_height">
    <ImageView
        android:id="@+id/gallery_item_iv"
        android:scaleType="fitXY"
        android:layout_width="@dimen/gallery_item_width"
        android:layout_height="@dimen/gallery_video_height" />
    <ImageView
        android:id="@+id/gallery_item_bg"
        android:layout_centerInParent="true"
        android:src="@drawable/button_play_unclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_below="@+id/gallery_item_iv"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/video_text_margin_top"
        android:maxEms="12"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/common_tv_size_normal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>