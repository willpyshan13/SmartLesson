<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/gallery_padding_bottom"
    android:paddingRight="@dimen/gallery_padding_bottom"
    android:paddingTop="@dimen/video_margin"
    android:paddingBottom="@dimen/video_margin"
    android:layout_width="@dimen/gallery_item_width"
    android:layout_height="@dimen/gallery_item_height">
    <ImageView
        android:id="@+id/gallery_item_iv"
        android:scaleType="fitXY"
        android:paddingTop="@dimen/gallery_thumbnail_top"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/gallery_video_width"
        android:layout_height="@dimen/gallery_video_height" />
    <ImageView
        android:id="@+id/gallery_item_bg"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:maxEms="10"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="@dimen/gallery_video_text_margin_bottom"
        android:textSize="@dimen/common_tv_size_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>